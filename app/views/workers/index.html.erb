<%- model_class = Worker -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:contacts) %></th>
      <th><%= model_class.human_attribute_name(:search_status) %></th>
      <th><%= model_class.human_attribute_name(:desired_salary) %></th>
      <th><%= model_class.human_attribute_name(:abilities_count) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= link_to worker.id, worker_path(worker) %></td>
        <td><%= worker.name %></td>
        <td><%= worker.contacts %></td>
        <td><%= worker.search_status %></td>
        <td><%= worker.desired_salary %></td>
        <td><%= worker.abilities_count %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      worker_path(worker), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_worker_path(worker), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      worker_path(worker),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_worker_path,
            :class => 'btn btn-primary' %>
